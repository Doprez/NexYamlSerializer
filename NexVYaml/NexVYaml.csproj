<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	  <OutputType>Library</OutputType>
	  <PackageTags>yaml,serialization</PackageTags>
	  <Description>The Universal YamlSerializer for C#</Description>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="NexYamlSerializer">
      <HintPath>..\NexYamlSerializer\bin\Release\net8.0\NexYamlSerializer.dll</HintPath>
    </Reference>
    <Reference Include="NexYamlSourceGenerator">
      <HintPath>..\NexYamlSourceGenerator\bin\Debug\netstandard2.0\NexYamlSourceGenerator.dll</HintPath>
    </Reference>
    <None Remove="bin\Debug\net8.0\\NexYamlSerializer.dll" />
	<None Include="$(OutputPath)\NexYamlSerializer.dll" Pack="true" PackagePath="lib\net8.0" Visible="true" />
	<None Remove="bin\Debug\net8.0\\NexYamlSourceGenerator.dll" />
	<None Include="$(OutputPath)\NexYamlSourceGenerator.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>


</Project>
